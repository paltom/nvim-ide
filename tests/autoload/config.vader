Execute (Vim Home directory variable is defined):
  Assert exists("g:config#vim_home")

Execute (Vim Home directory variable points to existing directory):
  Assert isdirectory(fnamemodify(g:config#vim_home, ":p"))

Execute (Vim Home directory contains basic Vim structure):
  for file in [
          \"init.vim",
          \"plugin",
          \"autoload",
          \"pack",
          \]
    Assert filereadable(file) || isdirectory(file), "Failure reading ".file
  endfor

Execute (Plugins directory variable is defined):
  Assert exists("g:config#ext_plugins_directory")

Execute (Plugins directory variable points to existing directory):
  Assert isdirectory(g:config#ext_plugins_directory)

Execute (Plugins directory contains initialized git submodules):
  for plugin_dir in systemlist("find ".g:config#ext_plugins_directory."/* -maxdepth 0 -type d")
    Assert filereadable(plugin_dir."/.git"), plugin_dir." isn't git submodule"
  endfor
