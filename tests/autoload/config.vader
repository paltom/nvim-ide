Execute (config#vim_home variable is defined):
  Assert exists("g:config#vim_home")

Execute (config#ext_plugins_directory variable is defined):
  Assert exists("g:config#ext_plugins_directory")

Execute (Plugins directory contains initialized git submodules):
  if has("unix")
    let directory_list_command = "find ".g:config#ext_plugins_directory."/* -maxdepth 0 -type d"
  elseif has("win32")
    let directory_list_command = "dir /b/a:d ".g:config#ext_plugins_directory
  endif
  for plugin_dir in systemlist(directory_list_command)
    Assert filereadable(expand(plugin_dir."/.git")), plugin_dir." isn't initialized git submodule"
  endfor
